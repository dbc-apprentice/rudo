#!/usr/bin/env ruby
require 'rudo'
require 'trollop'

options = Trollop::options do
  opt :file_path, "Alternate path to list, default ~/rudo.yml", :default => '~/rudo.yml'
  opt :color, "Print with colors", :default => true
end

begin
  selection = Integer(ARGV[0]) - 1
rescue
  selection = ARGV[0]
end

r = Rudo.new(options)
r.remove(selection)
r.print(options)
